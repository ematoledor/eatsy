<div class="container">
	<div class="card">
		<div class="container-fliud">
			<div class="wrapper row">
				<div class="preview col-md-6">
					<div class="preview-pic tab-content">
                      <div class="tab-pane active" id="pic-1">
                        
                        </div>
					</div>

				</div>
                    <h2> Below are the details of the Recipe selected </h2>
				<div class="details col-md-6">
                    
					<h3 class="recipe-title"><%= @recipe.title %></h3>
				    <p class="recipe-instructions"><%= @recipe.instructions %></p>
					<p class="preparation-time"><%= @recipe.prep_time %></p>
					<p class="vegetarian"><%= @recipe.vegetarian %></p>
                    <p class="vegan"><%= @recipe.vegan %></p>
                    <p class="gluten_free"><%= @recipe.gluten_free %></p>
                    <p class="diary_free"><%= @recipe.diary_free %></p>
                    <p class="very healthy"><%= @recipe.very_healthy %></p>
                    <p class="cheap"><%= @recipe.cheap %></p>
                    <p class="very_popular"><%= @recipe.very_popular %></p>
                    <p class="ketogenic"><%= @recipe.ketogenic %></p>
                    <p class="servings"><%= @recipe.servings %></p>
                    <p class="source url"><%= @recipe.source_url %></p>
                    <p class="summary"><%= @recipe.summary %></p>
                
					<div class="action">
						<%= link_to recipes_path do %>
                            <button class="add-to-cart btn btn-dark" type="button">Back to Recipes</button>
                        <% end %>
                        </div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>



