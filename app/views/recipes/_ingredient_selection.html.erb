<link rel="stylesheet" type="text/css" href="show.css" />


	<% portions.each do |portion| %>	
	<div class="row">
				<div class="col ">
					<input type="checkbox" class="Accept" aria-label="ingredientSelection">
				</div>
				<div class="col">
					<h6><%= portion.ingredient.name %> </h6>
				</div>
				<div class="col"><%= portion.ingredient.image %></div>
				<div class="col"> <%= portion.amount %> </div>
				<div class="col"> <%= portion.unit %></div>
			</div>
			<% end %>