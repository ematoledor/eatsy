<div class="container">
	<div class="card">
		<div class="container-fliud">
			<div class="wrapper row">
				<div class="preview col-md-6">
					<div class="preview-pic tab-content">
                      <div class="tab-pane active" id="pic-1">
                      </div>
					</div>
				</div>
                    <h2> Below are the details of the Recipe selected </h2>
				<div class="details col-md-6">
					<h3 class="recipe-title"><%= @recipe.title %></h3>
				    <p class="recipe-instructions"><%= @recipe.instructions %></p>
					<p class="preparation-time"><%= @recipe.prep_time %></p>
                    <p class="servings"><%= @recipe.servings %></p>
                    <p class="summary"><%= @recipe.summary %></p>
                
					<div class="action">
						<%= link_to recipes_path do %>
                            <button class="add-to-cart btn btn-dark" type="button">Back to Recipes</button>
                        <% end %>
                        </div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>



