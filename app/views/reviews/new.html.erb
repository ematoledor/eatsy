<div class="" role="document">
  <div class="img-index3">
    <div class="card-body text-center">
      <div class="checkout text-format text-center">
        <img src=" https://i.imgur.com/d2dKtI7.png" height="100" width="100">
        <h3>
          Add a comment
        </h3>
          <%= simple_form_for [ @recipe, @review ] do |f| %>
            <%= f.input :description, placeholder: 'How was the recipe?' %>
            <%= f.input :rating, collection: [1,2,3,4,5] %>
            <%= f.submit "Review now", class: "btn-lg btn-warning" %>
          <% end %>
      </div>
    </div>
  </div>
</div>
