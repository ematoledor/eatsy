
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="text-right cross"> <i class="fa fa-times mr-2"></i> </div>
            <div class="card-body text-center"> <img src=" https://i.imgur.com/d2dKtI7.png" height="100" width="100">
                <div class="comment-box text-center">
                    <h4>Add a comment</h4>
                      <%= simple_form_for [ @recipe, @review ] do |f| %>
                        <%= f.input :description, placeholder: 'How was the Recipe?' %>
                        <%= f.input :rating, collection: [1,2,3,4,5] %>
                        <%= f.submit "Submit review", class: "btn btn-warning" %>
                      <% end %>
                </div>
            </div>
        </div>
    </div>
